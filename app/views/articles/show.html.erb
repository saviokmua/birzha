<% provide(:title, (article_title @article) ) %>
<div id="page-header">
  <div class="row">
    <div class="span12">
      <% if @article.news %>
      <h2>НОВИНИ</h2>
      <% else %>
      <h2><%= article_title @article %></h2>
      <% end %>
    </div>
    <!-- end .span12 -->
  </div><!-- end .row -->
</div><!-- end #page-header -->

<div class="row">
  <div class="span12">
    <h3 class="headline" style="margin-bottom: 5px;"><span><%= article_title @article %></span></h3>
      <%= (article_content @article).html_safe %>
    </div>
  </div>
<br>
    