            <div id="page-header">
              
                <div class="row">
                  <div class="span12">
                      
                        <h2>Новини</h2>
                        
                    </div><!-- end .span12 -->
                </div><!-- end .row -->
                
            </div><!-- end #page-header -->
      

<% @articles.each do |a| %>
<div class="row">

    <div class="span12">
        <h3 class="headline" style="margin-bottom: 5px;">
            <span><%= article_link a %></span>
        </h3>
        <%= a.created_at_date %>
        <br><br>
        <div style="clear">
          <%= (article_content a,true ).html_safe %>
        </div>
        <%= link_to "Читати далі", article_url(a) , class: "btn btn-green-dark" %>
    </div>
    
</div>
<br>
<% end %>
<%= will_paginate @articles, previous_label: "Назад",next_label: "Вперед" %>
