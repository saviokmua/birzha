
<h2>Користувачі</h2>
<%= will_paginate @users, previous_label: "Назад",next_label: "Вперед" %>
<table class="table table-striped table-bordered">
<tr>
	<td style="width:20px">№</td>
	<td>email</td>
	<td style="width:80px" align="center"><%= link_to bootstrap_icon(:add), new_admin_user_path, :class => 'btn' %></td>	
</tr>

<% i = @start_num %>
<% @users.each do |u| %>
<tr>
<td><%= i += 1 %></td>
<td><%= u.email %>
</td>
<td align="center">
	<% link_to bootstrap_icon(:show), admin_user_path(u) %>
	<%= link_to bootstrap_icon(:edit), edit_admin_user_path(u) %>
	<%= link_to bootstrap_icon(:destroy), admin_user_path(u), :method => :delete, :data => { :confirm => 'Знищити?' } unless u.admin or u.id == current_user.id %>
</td>
</tr>
<% end %>

</table>
<%= will_paginate @users, previous_label: "Назад",next_label: "Вперед" %>