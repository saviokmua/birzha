<%= bootstrap_form_for(@auction,url: admin_auction_index_path) do |f| %>
  <%= f.text_field :name, label: "Назва" %>
  <%= f.date_select :started_at, label: "Дата проведення" %>
   <%= f.collection_select :category_id, Category.all, :id, :name,  {label: "Категорія", prompt: "Виберіть категорію"}  %>
   <%= f.collection_select :status_id, Status.all, :id, :name,  {label: "Статус", prompt: "Виберіть статус"}  %>
   <%= f.text_field :cina, label: "Ціна" %>
  <%= f.submit " Зберегти " %>
<% end %>