<h2>Сторінки</h2>
<%= will_paginate @pages, previous_label: "Назад",next_label: "Вперед" %>
<table class="table table-striped table-bordered">
<tr>
	<td style="width:20px">№</td>
	<td>Назва</td>
	<td style="width:80px"><%= link_to bootstrap_icon(:add), new_admin_page_path, :class => 'btn' %></td>	
</tr>

<% i = @start_num %>
<% @pages.each do |p| %>
<tr>
<td><%= i += 1 %></td>
<td><%= p.title %>
</td>
<td>
	<%= link_to bootstrap_icon(:show), admin_page_path(p) %>
	<%= link_to bootstrap_icon(:edit), edit_admin_page_path(p) %>
	<%= link_to bootstrap_icon(:destroy), admin_page_path(p), :method => :delete, :data => { :confirm => 'Знищити?' } unless p.nodelete %>
</td>
</tr>
<% end %>

</table>
<%= will_paginate @pages, previous_label: "Назад",next_label: "Вперед" %>