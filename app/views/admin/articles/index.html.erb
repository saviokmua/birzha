<h2>Новини</h2>
<%= will_paginate @articles %>
<table class="table table-striped table-bordered">
<tr>
	<td style="width:20px">№</td>
	<td>Назва</td>
	<td style="width:200px"><%= link_to "Додати", new_admin_article_path, :class => 'btn' %></td>	

</tr>

<% i = @start_num %>
<% @articles.each do |a| %>
<tr>
<td><%= i += 1 %></td>
<td><%= a.title %></td>
<td>
	<%= link_to "Show", admin_article_path(a) %>
	<%= link_to "Edit", edit_admin_article_path(a) %>
	<%= link_to "Destroy", admin_article_path(a), :method => :delete, :data => { :confirm => 'Are you sure?' } %>
</td>
</tr>
<% end %>

</table>
<%= will_paginate @articles %>