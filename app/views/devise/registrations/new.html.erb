<% provide(:title, 'Реєстрація') %>
            <div id="page-header">
                <div class="row">
                  <div class="span12">
                        <h2>Реєстрація</h2>
                        
                    </div><!-- end .span12 -->
                </div><!-- end .row -->
                
            </div><!-- end #page-header -->
<div class="row">
  <div class="span12">
    <h3 class="headline-2" style="margin-bottom: 5px;"><span>Реєстрація</span></h3>
    
<div class="form_auth_main">
<div class="form_auth">
  <br>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password,"Пароль" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Пароль ще раз" %>
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Зареєструватися",class: "btn btn-large btn-green-light", style: "width:250px" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
    </div>
  </div>
<br>
</div></div>
